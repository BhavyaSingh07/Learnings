@model PersonResponse
@{
	ViewBag.Title = "Delete Person";
}

<a href="~/persons/index" class="link-hover">Back to Persons List</a>
<h2>Delete Person</h2>
<h3>Are you sure you want to delete?</h3>

<div class="w-50">
	<form asp-controllers="Persons" asp-action="Delete" method="post">
		@* action="~/persons/edit" *@
		<input type="hidden" asp-for="PersonID" />
		<div class="form-field flex">
			<div class="w-25">
				<label for="PersonName" class="form-label pt">Person Name</label>
			</div>
			<div class="flex-1">
				@* <input type="text" id="PersonName" name="PersonName" class="form-input" /> *@
				<input asp-for="PersonName" class="form-input" disabled="disabled"/>
			</div>
		</div>

		<div class="form-field flex">
			<div class="w-25">
				<label for="Email" class="form-label pt">Email</label>
			</div>
			<div class="flex-1">
				<input type="email" asp-for="Email" disabled="disabled" class="form-input" />
			</div>
		</div>

		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<button class="button button-red-back">Delete</button>

				@if (ViewBag.Errors != null)
				{
					<div class="text-red ml">
						<ul>
						@foreach (string error in ViewBag.Errors){
							<li class="ml">@error</li>
						}
						</ul>
					</div>
				}
			</div>
		</div>
	
	</form>
</div>